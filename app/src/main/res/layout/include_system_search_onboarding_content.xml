<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.duckduckgo.app.systemsearch.SystemSearchActivity"
    tools:showIn="@layout/include_system_search_onboarding">

    <LinearLayout
        android:id="@+id/checkmarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/onboardingText"
        app:layout_constraintStart_toStartOf="@id/onboardingText"
        app:layout_constraintTop_toBottomOf="@id/onboardingText"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif"
            android:text="@string/systemSearchOnboaringFeaturesIntroText"
            android:textColor="?attr/normalTextColor"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:drawableStart="@drawable/ic_success"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif"
            android:text="@string/systemSearchOnboaringFeatureOneText"
            android:textColor="?attr/normalTextColor"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:drawableStart="@drawable/ic_success"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif"
            android:text="@string/systemSearchOnboaringFeatureTwoText"
            android:textColor="?attr/normalTextColor"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:drawableStart="@drawable/ic_success"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif"
            android:text="@string/systemSearchOnboaringFeatureThreeText"
            android:textColor="?attr/normalTextColor"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <Button
        android:id="@+id/okButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/systemSearchOnboardingButtonOk"
        android:textColor="@color/cornflowerBlue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkmarks" />

    <Button
        android:id="@+id/toggleButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/systemSearchOnboardingButtonMore"
        android:textColor="@color/cornflowerBlue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/okButton"
        app:layout_constraintTop_toBottomOf="@id/checkmarks" />


</merge>